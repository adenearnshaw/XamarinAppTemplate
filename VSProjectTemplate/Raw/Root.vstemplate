<VSTemplate Version="3.0.0" Type="ProjectGroup" xmlns="http://schemas.microsoft.com/developer/vstemplate/2005">
    <TemplateData>
        <Name>Xamarin Native Mvvm Template</Name>
        <Description>Xamarin Native App using a PCL with MvvmLight</Description>
        <ProjectType>CSharp</ProjectType>
        <ProjectSubType>
        </ProjectSubType>
        <SortOrder>1000</SortOrder>
        <CreateNewFolder>true</CreateNewFolder>
        <DefaultName>Stc.AppTemplate</DefaultName>
        <ProvideDefaultName>true</ProvideDefaultName>
        <LocationField>Enabled</LocationField>
        <EnableLocationBrowseButton>true</EnableLocationBrowseButton>
        <Icon>TemplateLogo.png</Icon>
    </TemplateData>
    <TemplateContent>
	    <ProjectCollection>
            <SolutionFolder Name="Apps">
                <ProjectTemplateLink ProjectName="$safeprojectname$.App.Droid">
                    Stc.AppTemplate.App.Droid\Project.vstemplate
                </ProjectTemplateLink>
                <ProjectTemplateLink ProjectName="$safeprojectname$.App.iOS">
                    Stc.AppTemplate.App.iOS\Project.vstemplate
                </ProjectTemplateLink>
                <ProjectTemplateLink ProjectName="$safeprojectname$.App.UWP">
                    Stc.AppTemplate.App.UWP\Project.vstemplate
                </ProjectTemplateLink>               
            </SolutionFolder>
            <SolutionFolder Name="Core">
	            <ProjectTemplateLink ProjectName="$safeprojectname$.Common">
                    Stc.AppTemplate.Common\Project.vstemplate
                </ProjectTemplateLink>
                <ProjectTemplateLink ProjectName="$safeprojectname$.Core.Api">
                    Stc.AppTemplate.Core.Api\Project.vstemplate
                </ProjectTemplateLink>
                <ProjectTemplateLink ProjectName="$safeprojectname$.Core.Contracts">
                    Stc.AppTemplate.Core.Contracts\Project.vstemplate
                </ProjectTemplateLink>
                <ProjectTemplateLink ProjectName="$safeprojectname$.Core.Repository">
                    Stc.AppTemplate.Core.Repository\Project.vstemplate
                </ProjectTemplateLink>
                <ProjectTemplateLink ProjectName="$safeprojectname$.Core.Services">
                    Stc.AppTemplate.Core.Services\Project.vstemplate
                </ProjectTemplateLink>
                <ProjectTemplateLink ProjectName="$safeprojectname$.Core.UILogic">
                    Stc.AppTemplate.Core.UILogic\Project.vstemplate
                </ProjectTemplateLink>
            </SolutionFolder>
            <SolutionFolder Name="PlatformServices">
	            <ProjectTemplateLink ProjectName="$projectname$.PlatformServices.Droid">
                    Stc.AppTemplate.PlatformServices.Droid\Project.vstemplate
                </ProjectTemplateLink>
                <ProjectTemplateLink ProjectName="$projectname$.PlatformServices.iOS">
                    Stc.AppTemplate.PlatformServices.iOS\Project.vstemplate
                </ProjectTemplateLink>
            </SolutionFolder>
        </ProjectCollection>
    </TemplateContent>
    <WizardExtension>
        <Assembly>Stc.AppTemplate.Wizard, Version=1.0.0.0, Culture=neutral, PublicKeyToken=2eb3e2b2e74517ed</Assembly>
        <FullClassName>Stc.AppTemplate.Wizard.SafeProjectGroupName</FullClassName>
    </WizardExtension>
</VSTemplate>

